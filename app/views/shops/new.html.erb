<div>sign up</div>
<%= form_for(@shop, :html => {class: "border-2", role:"form"}) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name, class: "border-2 border-gray-900"  %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email, class: "border-2 border-gray-900"  %>
    </div>
   <div>
    <%= f.label :password %>
    <%= f.password_field :password, class: "border-2 border-gray-900", placeholder: "preffered password" %>
  </div>

  <%= f.submit "sign up" %>
<% end %>
  