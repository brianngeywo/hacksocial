<div>edit shop</div>
<%= form_for(@shop, :html => {class: "border-2", role:"form"}) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name, class: "border-2 border-gray-900"  %>
    </div>
    <div>
        <%= f.label :about %>
        <%= f.text_area :about, class: "border-2 border-gray-900"  %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email, class: "border-2 border-gray-900"  %>
    </div>
    <div>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: "border-2 border-gray-900" %>
    </div>
  <%= f.submit "save changes" %>
<% end %>